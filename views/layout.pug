doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .wrapper
      .header
        ul
          li
            a(href='/') Home
          if !currentUser
            li
              a(href='/sign-up') Sign Up
            li
              a(href='/login') Login
          else
            li
              a(href='/logout') Logout
      if currentUser
        .userLinks
          ul
            li
              a(href='/create-message') New Message
            li
              a(href='/become-member') Become a Member
            li
              a(href='/become-admin') Become an Admin
    .welcomeContainer
      if !currentUser
        h1 Members Only!
      else
        h1 WELCOME BACK #{currentUser.username}
        if currentUser.membershipStatus === "member"
          h2 You are a MEMBER!
        if currentUser.membershipStatus === "admin"
          h2 You are an ADMIN!
    .content
      block content